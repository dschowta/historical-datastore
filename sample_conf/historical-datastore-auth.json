{
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "web": {
    "bindAddr": "0.0.0.0",
    "bindPort": 4000,
    "staticDir": "../web"
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds-registry"
    },
    "retentionPeriods": ["1h", "1w"]
  },
  "data": {
    "backend": {
      "type": "influxdb",
      "dsn": "http://user:password@influxdb-hostname:8086/db"
    },
    "autoRegistration": false
  },
  "serviceCatalogs": [
    {
      "discover": false,
      "endpoint": "http://localhost:8082/sc",
      "ttl": 60,
      "auth": {
        "provider": "cas",
        "providerURL": "http://example.com/cas",
        "username": "",
        "password": "",
        "serviceID": ""
      }
    }
  ],
  "auth": {
    "enabled": true,
    "provider": "cas",
    "providerURL": "http://example.com/cas",
    "serviceID": "",
    "basicEnabled": false,
    "authorization": {
      "rules": [
        {
          "resources": ["/data","/registry","/aggregation"],
          "methods": ["GET","POST","PUT","DELETE"],
          "users": [],
          "groups": ["rwusers"]
        }
      ]
    }
  }
}
