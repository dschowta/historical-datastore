{
  "http": {
    "publicEndpoint": "http://localhost:8085",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "web": {
    "bindAddr": "0.0.0.0",
    "bindPort": 4000,
    "staticDir": "../web"
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "registry.ldb"
    }
  },
  "data": {
    "backend": {
      "type": "influxdb",
      "dsn": "http://user:password@localhost:8086/db"
    }
  },
  "aggregation": {},
  "serviceCatalogs": [
    {
      "discover": false,
      "endpoint": "http://localhost:8082/sc",
      "ttl": 10,
      "auth": {
        "provider": "cas",
        "providerURL": "http://example.com/cas",
        "username": "",
        "password": "",
        "serviceID": ""
      }
    }
  ],
  "auth": {
    "enabled": true,
    "provider": "cas",
    "providerURL": "http://example.com/cas",
    "serviceID": "",
    "basicEnabled": false,
    "authorization": {
      "rules": [
        {
          "resources": ["/data","/registry","/aggregation"],
          "methods": ["GET","POST","PUT","DELETE"],
          "users": [],
          "groups": ["rwusers"]
        }
      ]
    }
  }
}
